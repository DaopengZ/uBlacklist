{
  "name": "ublacklist",
  "version": "0.0.0",
  "devDependencies": {
    "@codemirror/commands": "^6.1.3",
    "@codemirror/language": "^6.3.2",
    "@codemirror/state": "^6.2.0",
    "@codemirror/view": "^6.7.2",
    "@lezer/highlight": "^1.1.3",
    "@mdi/svg": "^7.1.96",
    "@types/chrome": "0.0.206",
    "@types/dotenv-webpack": "^7.0.3",
    "@types/firefox-webext-browser": "^94.0.1",
    "@types/jest": "^29.2.5",
    "@types/node": "^16.18.11",
    "@types/prettier": "^2.7.2",
    "@types/punycode": "^2.1.0",
    "@types/react": "^17.0.52",
    "@types/react-dom": "^17.0.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "colord": "^2.9.3",
    "copy-webpack-plugin": "^11.0.0",
    "csstype": "^3.1.1",
    "dayjs": "^1.11.7",
    "dotenv-webpack": "^8.0.1",
    "esbuild": "^0.16.15",
    "esbuild-jest": "^0.5.0",
    "esbuild-loader": "^2.20.0",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "fork-ts-checker-webpack-plugin": "^7.2.14",
    "globby": "^13.1.3",
    "goober": "2.1.10",
    "html-webpack-plugin": "^5.5.0",
    "if-webpack-loader": "^2.0.0",
    "is-mobile": "^3.1.1",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "microstruct": "^2.0.3",
    "mpsl": "^3.1.22",
    "npm-run-all": "^4.1.5",
    "preact": "^10.11.3",
    "prettier": "^2.8.2",
    "punycode": "^2.1.1",
    "react-colorful": "^5.6.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.5",
    "semantic-release-amo": "^0.1.0",
    "semantic-release-chrome": "^3.1.0",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "engines": {
    "node": ">=16",
    "npm": "use_yarn_instead_of_npm"
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "prettier"
    ],
    "ignorePatterns": [
      "/.yarn",
      "/dist"
    ],
    "overrides": [
      {
        "files": [
          "**/*.ts",
          "**/*.tsx"
        ],
        "extends": [
          "plugin:@typescript-eslint/recommended",
          "plugin:@typescript-eslint/recommended-requiring-type-checking",
          "prettier"
        ],
        "parserOptions": {
          "project": "./tsconfig.json"
        },
        "rules": {
          "@typescript-eslint/no-misused-promises": [
            "error",
            {
              "checksVoidReturn": {
                "attributes": false
              }
            }
          ],
          "@typescript-eslint/no-unused-vars": "off"
        }
      },
      {
        "files": [
          "src/scripts/*.js"
        ],
        "env": {
          "browser": true,
          "es2019": true,
          "es2021": false,
          "node": false
        }
      }
    ],
    "plugins": [
      "import",
      "unused-imports"
    ],
    "reportUnusedDisableDirectives": true,
    "rules": {
      "object-shorthand": "warn",
      "sort-imports": [
        "warn",
        {
          "ignoreDeclarationSort": true
        }
      ],
      "import/order": [
        "warn",
        {
          "alphabetize": {
            "order": "asc"
          }
        }
      ],
      "react/jsx-sort-props": [
        "warn",
        {
          "callbacksLast": true
        }
      ],
      "react/prop-types": "off",
      "react-hooks/exhaustive-deps": [
        "warn",
        {
          "additionalHooks": "useClassName"
        }
      ],
      "unused-imports/no-unused-imports": "warn",
      "unused-imports/no-unused-vars": "warn"
    },
    "settings": {
      "react": {
        "version": "16"
      }
    }
  },
  "jest": {
    "transform": {
      "\\.tsx?$": [
        "esbuild-jest",
        {
          "sourcemap": true
        }
      ]
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,json,md,mdx,yaml,yml}": "prettier --write"
  },
  "packageManager": "yarn@3.3.1",
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "private": true,
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "semantic-release-chrome",
        {
          "asset": "ublacklist-${nextRelease.gitTag}-chrome-mv3.zip",
          "distFolder": "dist/chrome-mv3/production",
          "extensionId": "pncfbmialoiaghdehhbnbhkkgmjanfhe"
        }
      ],
      [
        "semantic-release-amo",
        {
          "addonId": "@ublacklist",
          "addonDirPath": "dist/firefox/production",
          "addonZipPath": "ublacklist-${nextRelease.gitTag}-firefox.zip",
          "approvalNotes": "To build this add-on, Node.js and Yarn are required.\nNOTE: Node.js 16 or later is required. Node.js 14 cannot build this add-on.\n\n$ yarn\n$ yarn build firefox production\n\nThe add-on will be built into dist/firefox/production.",
          "compatibility": [
            "firefox",
            "android"
          ],
          "submitReleaseNotes": true,
          "submitSource": true
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            "*.zip"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "postinstall": "simple-git-hooks",
    "build": "npm-run-all \"webpack --env browser={1:=chrome-mv3} --env mode={2:=development} --env typecheck={3:=notypecheck}\" --",
    "build-all": "run-p -l \"build chrome development typecheck\" \"build chrome production typecheck\" \"build chrome-mv3 development typecheck\" \"build chrome-mv3 production typecheck\" \"build firefox development typecheck\" \"build firefox production typecheck\" \"build safari development typecheck\" \"build safari production typecheck\"",
    "watch": "npm-run-all \"webpack --watch --env browser={1:=chrome-mv3} --env mode=development --env typecheck=notypecheck\" --",
    "clean": "rimraf dist",
    "lint": "FORCE_COLOR=1 run-p -l lint-eslint lint-prettier lint-typecheck",
    "lint-eslint": "eslint . --ignore-pattern /website",
    "lint-prettier": "prettier --check --loglevel warn . !website",
    "lint-typecheck": "tsc --noEmit",
    "fix": "FORCE_COLOR=1 run-s -l fix-eslint fix-prettier",
    "fix-eslint": "eslint --fix . --ignore-pattern /website",
    "fix-prettier": "prettier --write --loglevel warn . !website",
    "test": "jest",
    "g:eslint": "cd $INIT_CWD && eslint",
    "g:prettier": "cd $INIT_CWD && prettier",
    "webpack": "webpack"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged"
  },
  "workspaces": [
    "website"
  ]
}
